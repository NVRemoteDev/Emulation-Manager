                    </StackPanel>
                </StackPanel>

                <StackPanel Name="SteamFunctions" Margin="0,15,0,0">
                    <TextBlock FontSize="14" FontWeight="Medium">Steam Functions</TextBlock>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Name="CreateSteamShortcutsButton" Padding="3" Foreground="#FFFBFBFB" BorderBrush="#FF030404" Background="#FF2EBB28" FontSize="16" Click="CreateSteamShortcutsButton_Click">Create Steam Rom Shortcuts</Button>
                        <StackPanel Height="72">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Margin="5,5,365,0" FontSize="14" FontWeight="Medium">Steam Directory</TextBlock>
                                <Button Name="DeleteSteamShortcutsButton" Width="150" VerticalAlignment="Top" Margin="-10,0,0,0" Background="#FFE00E0E" Foreground="White" Click="DeleteSteamShortcutsButton_Click">Delete Steam Shortcuts</Button>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                <TextBox x:Name="SteamDirectoryTextBox" Text="{Binding EmuManagerModel.SteamDirectory, Mode=TwoWay}" Margin="5,2,0,0" Width="550" />
                                <Button Name="BrowseSteam" Margin="5,2,0,0" Padding="20,0,20,0" FontSize="14" Click="BrowseSteam_Click">...</Button>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="3,5,0,0">
                                <CheckBox IsChecked="{Binding EmuManagerModel.DownloadGridImages, Mode=TwoWay}">Download Grid Images</CheckBox>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <StackPanel Name="AdvancedSettings" Margin="0,10,0,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock FontSize="14" FontWeight="Medium">Advanced Settings</TextBlock>
                        <TextBlock x:Name="ShowHideAdvancedSettingsTextBlock" VerticalAlignment="Bottom" Margin="5,0,0,0" Foreground="#FF0017FF" TextDecorations="Underline" Cursor="Hand" ToolTip="Show or hide advanced settings" MouseUp="ShowHideAdvancedSettingsTextBlock_MouseUp">Show/Hide...</TextBlock>
                    </StackPanel>

                    <StackPanel Name="AdvancedSettingsValues" Visibility="Collapsed">
                        <TextBlock Margin="0,0,0,10">Only modify these if you know what you're doing. These can also be edited in the config file in this program's directory.</TextBlock>
                        
                        <TextBlock>Grid Images API URL</TextBlock>
                        <TextBox HorizontalAlignment="Left" Width="640" Text="{Binding EmuManagerModel.ImageApiUrl, Mode=TwoWay}"></TextBox>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,0">
                            <TextBlock Margin="0,0,0,5">%n = console (see below), %g = game name</TextBlock>
                        </StackPanel>
                        <TextBlock>Rom File Extensions (CSV)</TextBlock>
                        <TextBox Name="RomExtensionsTextBox" Text="{Binding EmuManagerModel.RomExtensions}" TextWrapping="Wrap"/>
                        <TextBlock>Consoles</TextBlock>
                        <TextBox Name="ConsolesTextBox" Text="{Binding EmuManagerModel.Consoles}" TextWrapping="Wrap"/>
                        <TextBlock>Consoles Names:Consoles</TextBlock>
                        <TextBox Name="ConsoleAliasesTextBox" Text="{Binding EmuManagerModel.ConsoleAliases}" TextWrapping="Wrap"/>
                        <TextBlock>Console:Emulator Assocations</TextBlock>
                        <TextBox Name="EmulatorConsoleAssociationsTextBox" Text="{Binding EmuManagerModel.EmulatorAssociations}" TextWrapping="Wrap"/>
                        <TextBlock>Launch Params</TextBlock>
                        <TextBox x:Name="EmulatorLaunchParamsTextBox" Text="{Binding EmuManagerModel.EmulatorLaunchParams}"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

            <StackPanel Name="Footer" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                <TextBlock>Copyright© 2015</TextBlock>
            </StackPanel>

        </StackPanel>

        <DockPanel>
            <Menu DockPanel.Dock="Top" Background="#FFDEDEDE">
                <MenuItem Header="File">
                    <MenuItem Header="Exit"/>
                </MenuItem>
                <MenuItem Header="Help">
                    <MenuItem x:Name="AboutMenuItem" Header="About..." Click="AboutMenuItem_Click"/>
                </MenuItem>
            </Menu>
            <StackPanel></StackPanel>
        </DockPanel>
    </Grid>
</Window>
