            <TextBlock FontFamily="Tahoma" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="32" Margin="0,0,0,2" Foreground="#FF494949">Tritium Emulation Manager</TextBlock>
            <TextBlock Margin="5,0,0,15">Click the question mark icons for help</TextBlock>
            <StackPanel Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}" Name="LoadingPanel">
