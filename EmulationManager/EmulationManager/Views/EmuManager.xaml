<Window x:Class="EmulationManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:EmulationManager.ViewModels"
        Title="Tritium Emulation Manager with Steam ROM Support" SizeToContent="Height" Width="890" ResizeMode="CanMinimize" Background="#FFF6F6F4" Foreground="#FF010101" BorderBrush="#FFFF1717">

    <Window.Resources>
        <local:EmuManagerViewModel x:Key="EMViewModel" />
    </Window.Resources>
    <Grid x:Name="mainGrid" DataContext="{StaticResource EMViewModel}">
        
